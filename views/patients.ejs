<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Date of Birth</th>
      <% if(fname){ %>
      <th>Gender</th>
      <th>Language</th>
      <% } %>
    </tr>
  </thead>

  <tbody>
    <% results.forEach(result => { %>

    <tr>
      <td><%=result.patient_id%></td>
      <td><%=result.first_name%></td>
      <td><%=result.last_name%></td>
      <td><%=result.date_of_birth%></td>
      <% if(fname){ %>
      <td><%=result.gender%></td>
      <td><%=result.language%></td>
      <% } %>
    </tr>

    <% }) %>
  </tbody>
</table>
